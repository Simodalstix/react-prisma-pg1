# Backend Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

{% if ssm_parameters is defined %}
{% for param in ssm_parameters.results %}
{{ param.item.env_name }}={{ param.parameter.value }}
{% endfor %}
{% endif %}

# Database Configuration
DATABASE_URL=postgresql://{{ postgres_user | default('postgres') }}:{{ postgres_password }}@localhost:5432/{{ postgres_db | default('portfolio_db') }}?schema=public

# Server Configuration
PORT={{ backend_port | default(3001) }}
NODE_ENV={{ node_env | default('production') }}

# Additional environment variables can be added here
{% if additional_env_vars is defined %}
{% for key, value in additional_env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}